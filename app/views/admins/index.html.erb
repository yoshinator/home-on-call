<%= content_for :my_mast do %>
<header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=asset_path 'home_service_bathroom.jpg'%>);">
</header>
<%end%>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Admins</h1>

  <table>
    <thead>
      <tr>
        <th>Fname</th>
        <th>Lname</th>
        <th>Email</th>
        <th>Super</th>
        <th>Client access</th>
        <th>Edit acces</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.fname %></td>
          <td><%= admin.lname %></td>
          <td><%= admin.email %></td>
          <td><%= admin.super %></td>
          <td><%= admin.client_access %></td>
          <td><%= admin.edit_access %></td>
          <td><%= link_to 'Show', admin, class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Admin', new_admin_path, class: "btn btn-primary btn-sm mb-4" %>
</div>