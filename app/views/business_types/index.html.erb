<%= content_for :my_mast do %>
  <header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=asset_path 'home_service_bathroom.jpg'%>);">
  </header>
<%end%>
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Business Types</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @business_types.each do |business_type| %>
        <tr>
          <td><%= business_type.name %></td>
          <td><%= link_to 'Show', business_type, class: "btn btn-primary btn-sm"  %></td>
          <td><%= link_to 'Edit', edit_business_type_path(business_type), class: "btn btn-primary btn-sm"  %></td>
          <td><%= link_to 'Destroy', business_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Business Type', new_business_type_path, class: "btn btn-primary btn-sm mb-4"  %>
</div>