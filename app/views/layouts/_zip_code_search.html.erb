<div class="fixed-bottom text-center  p-2 pulse">

  <%= form_with url: zip_search_path, method: "get", local: true do |f| %>
    <label class="h4 text-white">
      <i class="fas fa-map-marker"></i> Get started enter your zip code
    </label>
    <div class="input-group">
      <%=f.text_field :search, class: "form-control input-space", placeholder: "Zip Code", autocomplete: "off", id: "POOPER"%>
      <span class="input-group-button">
        <%=f.submit("Search", name: nil, class: "btn btn-primary inline-block input-space")%>
      </span>
    </div>
  <% end %>
</div>

