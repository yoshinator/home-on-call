<div class="rounded bg-light container mt-4">
  <h5 class="text-center bg-warning mb-2 p-2 rounded" id="result">Message</h5>

  <%= form_with url: zip_search_path, method: "get", local: true do |f| %>
    <div class="form-group">
      <%=f.label(:search, "Get started enter your zipcode")%>
      <%=f.text_field :search, class: "form-control", placeholder: "Zip Code", autocomplete: "off", id: "search_light_input"%>
    </div>
      <%=f.submit("Search", name: nil, class: "btn btn-primary m-3")%>
  <% end %>
</div>