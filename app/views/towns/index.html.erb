<p id="notice"><%= notice %></p>

<h1>Towns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>County</th>
      <th>State</th>
      <th>Market</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @towns.each do |town| %>
      <tr>
        <td><%= town.name %></td>
        <td><%= town.county %></td>
        <td><%= town.state %></td>
        <td><%= town.market_id %></td>
        <td><%= link_to 'Show', town %></td>
        <td><%= link_to 'Edit', edit_town_path(town) %></td>
        <td><%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

