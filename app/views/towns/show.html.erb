<%= content_for :my_mast do %>
  <header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=asset_path 'home_service_bathroom.jpg'%>);">
      <div class="card container d-flex h-100 mt-4 mb-4">

        <div class="card-body">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Name:</strong>
            <%= @town.name %>
          </p>

          <p>
            <strong>County:</strong>
            <%= @town.county %>
          </p>

          <p>
            <strong>State:</strong>
            <%= @town.state %>
          </p>

          <p>
            <strong>Market:</strong>
            <%= @town.market_id %>
          </p>

          <div>
          <strong>Town Description:</strong>
            <%=@town.town_description.html_safe if @town.town_description%>
          </div>

          <div>
          <strong>Town Description With Service [ror_service]:</strong>
            <%=@town.service_description.html_safe if @town.service_description%>
          </div>

          <%= link_to 'Edit', edit_town_path(@town) %> |
          <%= link_to 'Back', towns_path %>
        </div>
    </div>
  </header>



<%end%>