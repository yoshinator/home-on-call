<%= content_for :my_mast do %>
  <header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=header_selector(@post, "desktop")%>);">
      <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto text-center ">  
        <div class="text-overlay d-flex align-items-center">
          <h1 class="mx-auto mt-2 h2"> <%="#{@post.title.titleize}" %></h1>â€‹
        </div>
      </div>
    </div>
  </header>
<%end%>
    <div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @post.admin.full_name.titleize %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @post.slug %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title.titleize %>
</p>

<h3>Content Images</h3>
<% @post.content_images.attachments.each do |img| %>
<%= image_tag img, alt: "#{@post.title} #{img.filename}", class: "service-image" if img%>
<% end%>
<p>
  <strong>Blog Content:</strong>
  <%= sanitize(@post.content) %>
</p>

<p>
  <strong>Meta:</strong>
  <%= @post.meta %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
