<%= content_for :my_mast do %>
  <header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=asset_path 'home_service_bathroom.jpg'%>);">
  </header>
<%end%>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Clients</h1>

  <table>
    <thead>
      <tr>
        <th>Fname</th>
        <th>Lname</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Company name</th>
        <th>Active</th>
        <th>Market</th>
        <th>Business type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.fname %></td>
          <td><%= client.lname %></td>
          <td><%= client.email %></td>
          <td><%= client.phone %></td>
          <td><%= client.company_name %></td>
          <td><%= client.active %></td>
          <td><%= client.market.name %></td>
          <td><%= client.business_type.name %></td>
          <td><%= link_to 'Show', client, class: "btn btn-primary btn-sm"  %></td>
          <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-primary btn-sm"  %></td>
          <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Client', new_client_path, class: "btn btn-primary btn-sm mb-4"  %>
</div>